<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SonuSync" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Brand Color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary Brand Color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Accent Brand Color -->
        <item name="colorAccent">@color/accent</item>

        <!-- Customize Theme Here -->
        <item name="bottomNavigationStyle">@style/bottomNavBar</item>
        <item name="imageButtonStyle">@style/customImageButton</item>
        <item name="floatingActionButtonStyle">@style/customFABPlayerButton</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceTheme</item>
    </style>

    <!-- Custom Bottom Navigation Bar -->
    <style name="bottomNavBar" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="backgroundTint">@color/dark_bg</item>
        <item name="itemRippleColor">@color/white</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">45dp</item>
    </style>

    <!-- Custom Image Button -->
    <style name="customImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/dark_bg</item>
        <item name="android:tint">@color/primary</item>
        <item name="android:colorControlHighlight">@color/secondary</item>
    </style>

    <!-- Custom FAB Player Button -->
    <style name="customFABPlayerButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:tint">@color/black</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- Item Background -->
    <style name="musicItemBackground">
        <item name="android:background">@drawable/item_background_night</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Preference Settings Theme -->
    <style name="AppTheme.PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:progressTint">@color/primary</item>
        <item name="trackTint">@color/accent</item>
        <item name="thumbTint">@color/primary</item>
    </style>
</resources>